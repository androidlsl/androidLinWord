<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customBallView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asiatravel.roundrippleprogressbar.MainActivity"
    customBallView:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.asiatravel.roundrippleprogressbar.RoundRippleProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        customBallView:ballColor="#FE4748"
        customBallView:ballRadius="160dp"
        customBallView:centerText="30%"
        customBallView:centerTextColor="#000000"
        customBallView:centerTextSize="28dp"
        customBallView:progressColor="#55bfb7"></com.asiatravel.roundrippleprogressbar.RoundRippleProgressView>
</LinearLayout>